<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_margin="8dp">

    <androidx.cardview.widget.CardView
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="0dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"  >

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/img_item_type"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:src="@drawable/character01" />

            <TextView
                android:id="@+id/text_item_blocked"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/search_box_style"
                android:backgroundTint="#954C3F3F"
                android:paddingLeft="10dp" />

            <ImageView
                android:id="@+id/img_item_locked"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                app:srcCompat="@drawable/baseline_lock_24" />


        </FrameLayout>

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/checkbox_used_item"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:background="@drawable/check_box_style"
        android:layout_marginBottom="20dp"/>
</LinearLayout>