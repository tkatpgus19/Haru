<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".login.OpenFragment">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="로그인 후, 당신의 하루를 기록해보세요."
            android:textColor="#462727"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="계속함으로써 귀하는 당사의 이용 약관 및 \n 개인 정보 보호 정책에 동의합니다. "
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="55dp"
            android:textColor="#808488"
            android:gravity="center"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="24dp"/>

        <Button
            style="tom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="로그인"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:background="@drawable/btn_style"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="계정이 없나요? \n 지금 회원가입 하세요."
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="55dp"
            android:textColor="#808488"
            android:gravity="center"
            android:layout_marginTop="48dp"
            android:layout_marginBottom="24dp"/>

        <Button
            style="tom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="로그인"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:background="@drawable/btn_style"/>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>