<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/btn_style2"
    tools:context=".diary.DiaryDetailsFragment">

    <LinearLayout
        android:id="@+id/layout01"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:src="@drawable/baseline_arrow_back_ios_new_24"
            tools:layout_editor_absoluteX="17dp"
            tools:layout_editor_absoluteY="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="12dp"
            android:text="2023.11.17"
            android:textColor="#462727"
            android:textSize="20dp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layout01">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="8dp"
            android:gravity="left"
            android:text="오늘의 기분"
            android:textColor="#462727"
            android:textSize="20sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/feeling01"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:gravity="center_vertical"
                android:text=" 😊"
                android:textColor="#6A6363"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/feeling02"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:gravity="center_vertical"
                android:text=" 😆"
                android:textColor="#6A6363"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/feeling03"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:gravity="center_vertical"
                android:text=" 😂"
                android:textColor="#6A6363"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/feeling04"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:gravity="center_vertical"
                android:text=" 😥"
                android:textColor="#6A6363"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/feeling05"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:gravity="center_vertical"
                android:text=" 😭"
                android:textColor="#6A6363"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/feeling06"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:gravity="center_vertical"
                android:text=" 😔"
                android:textColor="#6A6363"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/feeling07"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:gravity="center_vertical"
                android:text=" 😤"
                android:textColor="#6A6363"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/feeling08"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:gravity="center_vertical"
                android:text=" 😡"
                android:textColor="#6A6363"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/feeling09"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:gravity="center_vertical"
                android:text=" 🤬"
                android:textColor="#6A6363"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/feeling10"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:gravity="center_vertical"
                android:text=" 🤒"
                android:textColor="#6A6363"
                android:textSize="24sp"
                android:textStyle="bold" />

        </LinearLayout>


        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edit_text_shape"
            android:src="@drawable/baseline_insert_photo_24" />

        <Button
            android:id="@+id/btn_save"
            android:layout_width="72dp"
            android:layout_height="35dp"
            android:layout_gravity="right"
            android:layout_marginBottom="8dp"
            android:background="@drawable/btn_style2"
            android:text="저장"
            android:textColor="#72635D"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:gravity="left"
            android:text="오늘의 일기"
            android:textColor="#462727"
            android:textSize="20dp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/img_today_diary"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:layout_marginBottom="64dp"
            android:background="@drawable/edit_text_shape"
            android:scaleType="centerCrop"
            android:src="@drawable/img_diary"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="355dp" />

        <ImageButton
            android:id="@+id/imageButton"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="right"
            android:background="@drawable/btn_style"
            android:src="@drawable/baseline_add_24"
            tools:layout_editor_absoluteX="327dp"
            tools:layout_editor_absoluteY="654dp" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>