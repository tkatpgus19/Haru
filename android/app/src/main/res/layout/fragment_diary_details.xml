<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".diary.DiaryDetailsFragment"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/layout01"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/btn_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginLeft="4dp"
                android:src="@drawable/baseline_arrow_back_ios_new_24"/>

            <TextView
                android:id="@+id/tv_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="2023.11.17"
                android:textColor="#462727"
                android:textSize="20dp"
                android:textStyle="bold" />
        </FrameLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout02"
        android:layout_width="360dp"
        android:layout_height="match_parent"
        android:layout_marginTop="16dp"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:gravity="left"
            android:text="오늘의 기분"
            android:textColor="#462727"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/feeling"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:gravity="center_vertical"
            android:text="😆"
            android:textColor="#6A6363"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>

        <GridLayout
            android:id="@+id/emotion_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/btn_style2"
            android:columnCount="11"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <TextView
                android:id="@+id/feeling01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" 😊"
                android:textColor="#6A6363"
                android:layout_columnWeight="1"
                android:layout_columnSpan="1"
                android:layout_column="1"
                android:layout_gravity="center_vertical"
                android:textSize="24sp"
                android:textStyle="bold"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:id="@+id/feeling02"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" 😆"
                android:textColor="#6A6363"
                android:layout_columnWeight="1"
                android:layout_columnSpan="1"
                android:layout_column="2"
                android:layout_gravity="center_vertical"
                android:textSize="24sp"
                android:textStyle="bold"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:id="@+id/feeling03"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" 😂"
                android:textColor="#6A6363"
                android:layout_columnWeight="1"
                android:layout_columnSpan="1"
                android:layout_column="3"
                android:layout_gravity="center_vertical"
                android:textSize="24sp"
                android:textStyle="bold"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:id="@+id/feeling04"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" 😥"
                android:textColor="#6A6363"
                android:layout_columnWeight="1"
                android:layout_columnSpan="1"
                android:layout_column="4"
                android:layout_gravity="center_vertical"
                android:textSize="24sp"
                android:textStyle="bold"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:id="@+id/feeling05"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" 😭"
                android:textColor="#6A6363"
                android:layout_columnWeight="1"
                android:layout_columnSpan="1"
                android:layout_column="5"
                android:layout_gravity="center_vertical"
                android:textSize="24sp"
                android:textStyle="bold"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:id="@+id/feeling06"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" 😔"
                android:textColor="#6A6363"
                android:layout_columnWeight="1"
                android:layout_columnSpan="1"
                android:layout_column="6"
                android:layout_gravity="center_vertical"
                android:textSize="24sp"
                android:textStyle="bold"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:id="@+id/feeling07"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" 😤"
                android:textColor="#6A6363"
                android:layout_columnWeight="1"
                android:layout_columnSpan="1"
                android:layout_column="7"
                android:layout_gravity="center_vertical"
                android:textSize="24sp"
                android:textStyle="bold"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:id="@+id/feeling08"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" 😡"
                android:textColor="#6A6363"
                android:layout_columnWeight="1"
                android:layout_columnSpan="1"
                android:layout_column="8"
                android:layout_gravity="center_vertical"
                android:textSize="24sp"
                android:textStyle="bold"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:id="@+id/feeling09"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" 🤬"
                android:textColor="#6A6363"
                android:layout_columnWeight="1"
                android:layout_columnSpan="1"
                android:layout_column="9"
                android:layout_gravity="center_vertical"
                android:textSize="24sp"
                android:textStyle="bold"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:id="@+id/feeling10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" 🤒"
                android:textColor="#6A6363"
                android:layout_columnWeight="1"
                android:layout_columnSpan="1"
                android:layout_column="10"
                android:layout_gravity="center_vertical"
                android:textSize="24sp"
                android:textStyle="bold"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"/>

        </GridLayout>

        <ImageButton
            android:id="@+id/btn_img_choose"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_gravity="right"
            android:background="@drawable/btn_style3"
            android:src="@drawable/baseline_add_photo_alternate_24"
            tools:layout_editor_absoluteX="327dp"
            tools:layout_editor_absoluteY="654dp"
            android:layout_marginBottom="8dp" />

        <Button
            android:visibility="invisible"
            android:id="@+id/btn_upload"
            android:layout_width="72dp"
            android:layout_height="30dp"
            android:layout_gravity="right"
            android:layout_marginBottom="24dp"
            android:background="@drawable/btn_style2"
            android:text="업로드"
            android:textColor="#72635D"
            android:textSize="16sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/edit_text_today_diary"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@drawable/btn_style2"
            android:hint="오늘 당신의 하루는 어땠나요?"
            android:textSize="12sp"
            android:gravity="top"
            android:textColorHint="#979FA8"
            android:padding="20dp"
            android:scrollbars="vertical"
            android:layout_marginBottom="24dp"/>

        <Button
            android:id="@+id/btn_save"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="저장"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:background="@drawable/btn_style"
            android:visibility="gone"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <Button
                android:id="@+id/btn_delete"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:text="삭제"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:background="@drawable/btn_style"
                android:layout_marginRight="16dp"/>

            <Button
                android:id="@+id/btn_edit"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:text="수정"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:background="@drawable/btn_style"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>