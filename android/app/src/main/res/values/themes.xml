<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Final_project" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="colorPrimaryVariant">@color/lightDarkBrown</item>
        <item name="colorAccent">@color/lightBrown</item>
        <item name="colorControlNormal">@color/lightDarkBrown</item>
        <item name="android:statusBarColor" tools:targetApi="1">?attr/colorPrimaryVariant</item>
    </style>

    <style name="Theme.Final_project" parent="Base.Theme.Final_project" />

    <style name="MySpinnerDatePickerStyle" parent="Theme.MaterialComponents.Light.Dialog">
        <!-- 상단 색 변경 -->
        <item name="colorAccent">@color/lightDarkBrown</item>
        <!-- dialog의 배경 변경 -->
        <item name="background">@drawable/btn_style</item>
        <!-- 선택한 날짜를 표시할 색상 -->
        <item name="colorControlActivated">@color/lightBrown</item>
        <item name="colorControlHighlight">@color/lightBrown</item>
        <!-- 취소/확인버튼 색상 -->
        <item name="android:textColor">@color/lightBrown</item>
    </style>

</resources>